@model InCity.Models.PlaceModel

@{ 
    ViewBag.Title = "Места";
}

@if (Model.mHeader != "")
{
    <div style="text-align: center; height: 150px; background: url(../../@Model.mHeader) no-repeat center center;">
        <div style="color: whitesmoke; font-size: 60px; padding-top:35px">@Html.DisplayFor(m => Model.mTitle)</div>
    </div>
}
else
{
    <div style="text-align: center; height: 150px; background: url(../../Content/Img/Headers/1.jpg) no-repeat center center;">
        <div style="color: whitesmoke; font-size: 60px; padding-top:35px">@Html.DisplayFor(m => Model.mTitle)</div>
    </div>
}

<div>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<p>
    <b>Адрес:</b> @Html.DisplayFor(m => Model.mAddress)
</p>
