@model InCity.Models.TypeModel

@{
    ViewBag.Title = "Новый тип";
}

<h2>Новый тип</h2>

@using (Html.BeginForm("NewTypeSave", "ContentFiller", FormMethod.Post, new { enctype = "multipart/form-data", name = "myform" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.mId)

        <div style="padding: 10px">
            <h3 style="display:inline">Заголовок</h3>
            @Html.EditorFor(model => model.mTitle, new { htmlAttributes = new { @class = "form-control", style = "margin-left: 5px; display:inline;" } })
            @Html.ValidationMessageFor(model => model.mTitle, "", new { @class = "text-danger" })
        </div>

        <table width="100%">
            <tr>
                <td width="50%" class="cancel-btn" onclick="location.href='/ContentFiller?pPass=Amaterassu11071959'" style="padding: 5px;">
                    <h3><span class="glyphicon glyphicon-remove"></span></h3>
                </td>
                <td width="50%" class="save-btn" onclick="document.myform.submit();" style="padding: 5px;">
                    <h3><span class="glyphicon glyphicon-ok"></span></h3>
                </td>
            </tr>
        </table>
    </div>
}
